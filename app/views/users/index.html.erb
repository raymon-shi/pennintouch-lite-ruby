<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to "My User Page", current_user, :class => "btn btn-outline-primary", :method => :get %>
<br>

<h1>Instructors</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Pennkey</th>
      <th scope="col">View</th>
    </tr>
  </thead>
  <tbody>
    <% @users.instructors.each do |instructor|%>
    <tr>
      <td> <%= instructor.first_name%> </td>
      <td> <%= instructor.last_name%> </td>
      <td> <%= instructor.pennkey%> </td>
      <td> <%= link_to 'Show', instructor %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

